<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context"
    xmlns:util="http://www.springframework.org/schema/util" xmlns:p="http://www.springframework.org/schema/p" xmlns:c="http://www.springframework.org/schema/c"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd"

    default-init-method="initialize" default-destroy-method="destroy">

    <!-- RPs that get somthing automatically.  See relying-party.xml and authn/mfa-authn-config.xml -->
    <!-- AUTOGENERATED! -->

    <!-- Auto 2fa. (except workday) -->
    <bean id="uw.AutoTokenRPs" parent="shibboleth.Conditions.RelyingPartyId">
        <constructor-arg name="candidates">
            <list>
            {% for rp in info.mfa %}
            <value>{{ rp }}</value>
            {% endfor %}
            </list>
        </constructor-arg>
    </bean>

    <!-- IdP authz. -->
    <bean id="uw.AutoAuthzRPs" parent="shibboleth.Conditions.RelyingPartyId">
        <constructor-arg name="candidates">
            <list>
            {% for rp in info.authz %}
            <value>{{ rp }}</value>
            {% endfor %}
            </list>
        </constructor-arg>
    </bean>

    <!-- Auto 2fa AND IdP authz. -->
    <bean id="uw.AutoTokenAutoAuthzRPs" parent="shibboleth.Conditions.RelyingPartyId">
        <constructor-arg name="candidates">
            <list>
            {% for rp in info.mfa_authz %}
            <value>{{ rp }}</value>
            {% endfor %}
            </list>
        </constructor-arg>
    </bean>

    <bean id="uw.AmazonRPs" parent="shibboleth.Conditions.RelyingPartyId">
        <constructor-arg name="candidates">
            <list>
            <value>urn:amazon:webservices</value>
            </list>
        </constructor-arg>
    </bean>

</beans>

